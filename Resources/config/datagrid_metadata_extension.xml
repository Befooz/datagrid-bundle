<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="datagrid.metadata.factory.class">FSi\Component\Metadata\MetadataFactory</parameter>
        <parameter key="datagrid.metadata.driver.annotation.class">FSi\FSiExtension\DataGrid\Extension\Metadata\Mapping\Driver\AnnotationDriver</parameter>
    </parameters>

    <services>
        <service id="datagrid.metadata.factory" class="%datagrid.metadata.factory.class%" public="false" >
            <argument type="service" id="datagrid.metadata.driver.annotation" />
        </service>

        <service id="datagrid.metadata.driver.annotation" class="%datagrid.metadata.driver.annotation.class%">
            <argument type="service" id="annotation_reader" />
        </service>

        <service id="datagrid.subscriber.metadata.setdata" class="FSi\FSiExtension\DataGrid\Extension\Metadata\EventSubscriber\SetData">
            <tag name="datagrid.subscriber" alias="metadata.setdata"/>
            <argument type="service" id="datagrid.metadata.factory" />
        </service>  
    </services>
</container>